<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SolitaireMahjongApp.Views.MahjongView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SolitaireMahjongApp.Views"
    Title="MahjongView"
    BackgroundImageSource="fundo_mahjong.png">

    <ScrollView>
        <VerticalStackLayout>
            <Grid
                Margin="0,10,0,0"
                Padding="10"
                RowDefinitions="Auto">
                <HorizontalStackLayout>
                    <Button
                        Margin="80,0,50,0"
                        BackgroundColor="Red"
                        FontFamily="zCool"
                        FontSize="33"
                        HeightRequest="77"
                        HorizontalOptions="Start"
                        Text="PAUSE"
                        TextColor="White"
                        WidthRequest="170" />
                    <Button
                        BackgroundColor="Transparent"
                        Command="{Binding HintCommand}"
                        FontFamily="zCool"
                        FontSize="36"
                        Text="Dica"
                        TextColor="White" />
                </HorizontalStackLayout>
                <Button
                    BackgroundColor="Red"
                    Command="{Binding LoadTilesCommand}"
                    FontFamily="zCool"
                    FontSize="20"
                    HeightRequest="30"
                    Text="Carregar peÃ§as"
                    WidthRequest="200" />
                <Label
                    Grid.Column="0"
                    Margin="0,0,80,0"
                    FontFamily="zCool"
                    FontSize="76"
                    HorizontalOptions="EndAndExpand"
                    Text="{Binding TimerText}"
                    TextColor="White" />
            </Grid>
            <AbsoluteLayout
                Margin="110,0,0,0"
                BindableLayout.ItemsSource="{Binding Tiles}"
                HeightRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="FillAndExpand">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <ImageButton
                            x:Name="AnimatedImageButton"
                            Clicked="AnimatedImageButton_Clicked"
                            AbsoluteLayout.LayoutBounds="{Binding LayoutBounds}"
                            BackgroundColor="{Binding Color}"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.TileCommand}"
                            CommandParameter="{Binding .}"
                            HeightRequest="100"
                            Source="{Binding CaminhoImagem}"
                            WidthRequest="80"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </AbsoluteLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
